<%= form_for(@track, html: { name: "form", class: "form-horizontal" }) do |f| %>
  <div ng-controller="CertificationTrackController" ng-init="init('<%= @track.name %>', <%= @track.enabled %>)">

    <div class="form-group" ng-class="{ 'has-error' : fieldIsValid(form['certification_track[name]']) }">
      <label for="text" class="col-sm-2 control-label">Track Name
        <span style="color:red;">*</span>
      </label>
      <div class="col-sm-10">
        <input id="certification_track_name" name="certification_track[name]" class="form-control" placeholder="Track Name" autofocus="autofocus" type="text" ng-model="track.name" required>
        <p class="error" ng-show="fieldIsValid(form['certification_track[name]'])">Track Name is required.
        </p>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="togglebutton">
          <label>
            <%= f.check_box :enabled %> Enabled
          </label>
        </div>
      </div>
    </div>

    <div class="text-right">
      <%= f.submit "Submit", class: "btn btn-primary", ng_disabled: "form.$invalid" %>
      <%= link_to "Cancel", certification_tracks_path, class: "btn btn-warning" %>
    </div>
  </div>
<% end %>