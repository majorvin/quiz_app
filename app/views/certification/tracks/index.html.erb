<ul class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li class="active">Certification Track</li>
</ul>

<br/>

<%= button_to "Add Track", new_certification_track_path, class: "btn btn-primary btn-sm", :method => :get %>

<div class="table-responsive">
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th style="width: 60px;">Enabled</th>
        <th style="width: 80px;">Actions</th>
      </tr>
    </thead>
    <tbody data-link="row" class="rowlink">
      <% @tracks.each do |track| %>
        <tr>
          <td>
            <%= link_to track.name, certification_track_path(track.id) %>
          </td>
          <td class="rowlink-skip text-center">
            <% if track.enabled %>
              <div>
                <i class="glyphicon glyphicon-ok"></i>
              </div>
            <% end %>
          </td>
          <td class="rowlink-skip text-center">
            <%= link_to edit_certification_track_path(track), class: "btn bootstrap" do %>
              <i class="glyphicon glyphicon-edit text-primary"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>