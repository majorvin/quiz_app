<section id="loginBox">
  <h2 class="text-center">Sign In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

     <!-- <%= f.email_field :email, autofocus: true, class: "form-control floating-label validate", placeholder: "Email" %> --><!--
     <%= f.password_field :password, autocomplete: "off", class: "form-control floating-label", placeholder: "Password"%> -->
    <div class="input-group">
      <span class="input-group-addon">
        <i class="mdi-communication-email"></i>
      </span>
      <input type="email" id="user_email" name="user[email]" class= "form-control floating-label" placeholder= "Email" autofocus="autofocus">
    </div>
    <div class="input-group">
      <span class="input-group-addon">
        <i class="mdi-communication-vpn-key"></i>
      </span>
      <input type="password" id="user_password" name="user[password]" class= "form-control floating-label" placeholder= "Password" autocomplete="off">
    </div>

    <button class="btn btn-block btn-primary waves-effect waves-light" type="submit" name="action">SIGN IN</button>

    <hr />
  <% end %>
  <%= render "devise/shared/links" %>
</section>
